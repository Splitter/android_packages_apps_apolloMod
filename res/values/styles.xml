<?xml version="1.0" encoding="utf-8"?>
<resources>
    
	<!-- 
		GENERAL THEME STYLES
	-->	    
    <!--  ActionBar Styles -->
	<style name="ApolloTheme.OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
	    <item name="android:src">@drawable/apollo_holo_dark_overflow</item>
	</style>
    <style name="ApolloTheme.BlueActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar</item>
        <item name="android:textColor">@color/actionbar_text</item>
    	<item name="android:titleTextStyle">@style/ApolloTheme.ActionBar.TitleTextStyle</item>
	</style>
	<style name="ApolloTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionbar_text</item>
	</style>
    <!--  Tabs Styles -->
    <style name="TabsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@drawable/tab</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/tab_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/tab_padding_left_right</item>
        <item name="android:paddingRight">@dimen/tab_padding_left_right</item>
        <item name="android:paddingTop">@dimen/tab_padding_top_bottom</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:selectAllOnFocus">false</item>
    </style>    
    <!-- BottomActionBar Styles-->
    <style name="BottomActionBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
	    <item name="android:paddingLeft">@dimen/bottom_action_bar_padding_left</item>
	    <item name="android:paddingRight">@dimen/bottom_action_bar_padding_left</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="BottomActionBarWrapperLayout">        
    	<item name="android:layout_width">match_parent</item>
    	<item name="android:layout_height">@dimen/bottom_action_bar_height</item>
    	<item name="android:layout_gravity">bottom</item>
    	<item name="android:orientation">vertical</item> 
    </style>
    <style name="BottomActionBarOuterLayout">
    	<item name="android:layout_width">match_parent</item> 
    	<item name="android:layout_height">match_parent</item> 
    	<item name="android:orientation">vertical</item>  
    	<item name="android:clickable">true</item> 
    	<item name="android:focusable">false</item> 
    </style>
    <style name="BottomActionBarItemLayout">
        <item name="android:layout_width">@dimen/bottom_action_bar_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/bottom_action_bar_item_padding_left_right</item>
        <item name="android:paddingRight">@dimen/bottom_action_bar_item_padding_left_right</item>
    </style>
    <style name="BottomActionBarTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">3dp</item>
	    <item name="android:paddingLeft">@dimen/bottom_action_bar_padding_left</item>
	    <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BottomActionBarDividerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_action_bar_divider_height</item>
    </style> 	
    <!-- AudioPlayer Styles -->
    <style name="AudioPlayerAlbumArtLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">matrix</item>
    </style>
    <style name="AudioPlayerTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:scrollHorizontally">false</item>
    </style>
    <style name="AudioPlayerAlbumArtistTextLayout" parent="AudioPlayerTextLayout">        
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="AudioPlayerInfoTextLayout" parent="AudioPlayerTextLayout">  
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">21</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AudioPlayerViewMoreLayout">  
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">3dp</item>
	    <item name="android:padding">@dimen/half_and_half_imagebutton_padding</item>
    </style>    
    <style name="AudioPlayerButtonLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AudioPlayerTimeTextLayout" parent="AudioPlayerTextLayout">
        <item name="android:layout_alignBottom">@android:id/progress</item>
        <item name="android:layout_alignTop">@android:id/progress</item>
        <item name="android:gravity">center</item>
    </style>    
    <style name="AudioPlayerNowPlayingTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/audio_player_nowplaying_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/audio_player_nowplaying_padding_top_bottom</item>
        <item name="android:paddingLeft">@dimen/audio_player_nowplaying_padding_left</item>
        <item name="android:layout_alignBottom">@+id/now_playing_viewpager</item>
        <item name="android:text">@string/nowplaying</item>
    </style>    
    <style name="AudioPlayerQueueBGLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AudioPlayerColorstripLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/colorstrip_height</item>
    </style>
    <style name="AudioPlayerSeekLayout" parent="android:attr/progressBarStyleHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toLeftOf">@+id/audio_player_total_time</item>
        <item name="android:layout_toRightOf">@+id/audio_player_current_time</item>
        <item name="android:paddingTop">@dimen/audio_player_seek_bar_padding</item>
        <item name="android:thumb">@null</item>
    </style>
    <!-- Context Menu Styles -->
    <style name="ContextMenuLineLayout">
        <item name="android:layout_width">@dimen/quick_context_line_width</item>
        <item name="android:layout_height">@dimen/quick_context_line_height</item>
        <item name="android:layout_gravity">center|left</item>
    </style>
    <style name="ContextMenuArrowLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/quick_context_margin_right</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!--  Listview Styles -->    
    <style name="ListviewItemWrapperLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listview_item_height</item>
        <item name="android:paddingTop">@dimen/listview_items_padding_top_bottom</item> 
        <item name="android:paddingBottom">@dimen/listview_items_padding_top_bottom</item> 
        <item name="android:layout_gravity">center_vertical</item>
    </style>   
    <style name="ListviewItemArtLayout">
        <item name="android:layout_width">@dimen/listview_album_art</item>
        <item name="android:layout_height">@dimen/listview_album_art</item>
        <item name="android:layout_alignParentLeft">true</item> 
        <item name="android:layout_margin">@dimen/listview_album_margin</item> 
        <item name="android:scaleType">centerCrop</item> 
    </style>
    <style name="ListviewItemLineOneLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/listview_item_image</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLength">29</item>
        <item name="android:paddingLeft">@dimen/listview_items_padding_left_top</item>
        <item name="android:paddingRight">@dimen/listview_items_padding_right</item>
        <item name="android:paddingTop">@dimen/listview_items_padding_left_top</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_small_medium</item> 
    </style>    
    <style name="ListviewItemLineTwoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/listview_items_padding_left_top</item>
        <item name="android:paddingRight">@dimen/listview_items_padding_right</item>
        <item name="android:paddingTop">@dimen/listview_items_padding_small_top</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_below">@+id/listview_item_line_one</item>
        <item name="android:layout_toRightOf">@+id/listview_item_image</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_size_small</item> 
    </style> 
    <style name="ListviewLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">0dp</item> 
        <item name="android:layout_weight">1</item> 
        <item name="android:drawSelectorOnTop">false</item> 
        <item name="android:fastScrollAlwaysVisible">false</item> 
        <item name="android:fastScrollEnabled">false</item> 
        <item name="android:scrollbars">none</item> 
        <item name="android:dividerHeight">@dimen/listview_items_padding_top_bottom</item> 
        <item name="android:paddingRight">@dimen/listview_items_padding_top_bottom</item>  
        <item name="android:paddingLeft">@dimen/listview_items_padding_top_bottom</item> 
    </style>
    <!-- Dragsort Listview Styles -->
    <style name="ListviewDragHandleLayout">
        <item name="android:layout_width">@dimen/listview_drag_width</item> 
        <item name="android:layout_height">@dimen/listview_drag_height</item> 
        <item name="android:layout_alignParentLeft">true</item> 
        <item name="android:scaleType">center</item> 
    </style>
    <!-- Gridview Styles -->    
    <style name="GridviewLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">0dp</item> 
        <item name="android:layout_weight">1</item> 
        <item name="android:paddingLeft">@dimen/gridview_item_padding_right_left_outer</item> 
        <item name="android:paddingRight">@dimen/gridview_item_padding_right_left_outer</item> 
        <item name="android:drawSelectorOnTop">true</item> 
        <item name="android:numColumns">@integer/gridview_columns</item> 
        <item name="android:scrollbars">none</item> 
    </style>
    <style name="GridviewItemWrapperLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">match_parent</item>  
    </style>
    <style name="GridviewItemArtLayout"> 
        <item name="android:layout_width">@dimen/gridview_image_width</item>  
        <item name="android:layout_height">@dimen/gridview_image_height</item>  
        <item name="android:scaleType">matrix</item> 
    </style>
    <style name="GridviewItemTextWrapperLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">@dimen/gridview_item_ccontainer_height</item> 
        <item name="android:gravity">center_vertical</item> 
        <item name="android:orientation">vertical</item> 
        <item name="android:paddingLeft">@dimen/gridview_item_ccontainer_padding_left</item> 
        <item name="android:paddingRight">@dimen/gridview_item_ccontainer_padding_right</item>
    </style>
    
    <!-- Recents Gridview Styles -->
    <style name="GridviewRecentsWrapperLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/gridview_recent_item_height</item>
        <item name="android:paddingTop">@dimen/listview_items_padding_top_bottom</item> 
        <item name="android:paddingBottom">@dimen/listview_items_padding_top_bottom</item> 
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="GridviewRecentsArtLayout">
        <item name="android:layout_width">@dimen/gridview_image_width</item>
        <item name="android:layout_height">@dimen/gridview_recent_album_art</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">matrix</item> 
    </style>
    <style name="GridviewRecentsShadowedTextLayout" parent="ShadowedTextLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:layout_alignBottom">@+id/gridview_image</item> 
        <item name="android:ellipsize">end</item> 
        <item name="android:maxLength">49</item> 
        <item name="android:padding">4dp</item> 
        <item name="android:singleLine">true</item> 
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="GridviewRecentsTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/gridview_image</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">@dimen/listview_items_padding_small_top</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_micro</item>        
    </style>
        
    <!-- Shadowed Text Styles-->
    <style name="ShadowedTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowRadius">1.5</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <!-- Colorstrip Style -->
    <style name="ColorstripLayout">        
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/colorstrip_height</item>
    </style>
    
    <!-- Half & Half Styles -->
    <style name="HalfTextWrapperLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/half_and_half_text_wrap_height</item>
        <item name="android:layout_alignBottom">@+id/half_artist_image</item>
        <item name="android:paddingTop">@dimen/gridview_item_ccontainer_padding_left</item>
        <item name="android:paddingBottom">@dimen/gridview_item_ccontainer_padding_left</item>
        <item name="android:paddingLeft">@dimen/gridview_item_ccontainer_padding_left</item>
        <item name="android:paddingRight">@dimen/gridview_item_ccontainer_padding_right</item>
    </style>
    <style name="HalfTextViewMoreLayout">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">@dimen/half_and_half_imagebutton_padding</item>
    </style>
    
    <!-- Library Browser Styles -->
    <style name="LibraryWrapperLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">?android:attr/actionBarSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>        
    </style>
    <style name="LibraryTabsWrapperLayout">
        <item name="android:layout_width">match_parent</item>  
        <item name="android:layout_height">@dimen/tab_height</item>  
    </style>
    
    <!-- Shuffle Styles -->
    <style name="ShuffleWrapperLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingRight">10dp</item> 
        <item name="android:paddingLeft">10dp</item> 
        <item name="android:paddingBottom">13dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ShuffleImageLayout">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginTop">13dp</item> 
        <item name="android:layout_marginLeft">16dp</item> 
	</style>
    
    <!-- Track Browser Styles -->
    <style name="TracksBrowserWrapperLayout">
        <item name="android:layout_width">match_parent</item> 
        <item name="android:layout_height">match_parent</item>
    </style>
    
	<!-- 
		// GENERAL THEME STYLES
	-->	
	
	
	
	
	
	
	
